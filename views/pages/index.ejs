	<% if (locals.userinfo) { %>
		<h1>Votre compte</h1>
		<div class="fr-grid-row fr-grid-row--gutters">
			<div class="fr-col-12 fr-col-lg-6">
				<div id="authorization_request_card_user_44597" class="fr-basic-card">
					<div class="fr-col">
						<h3>
							Vous êtes <strong><%= locals.userinfo.usual_name %> <%= locals.userinfo.given_name %></strong>
						</h3>
						<ul>
							<li>Nom usuel : <strong><%= locals.userinfo.usual_name %></strong></li>
							<li>Prénom : <strong><%= locals.userinfo.given_name %></strong></li>
							<li>Email : <strong><%= locals.userinfo.email %></strong></li>
							<li>Profession : 
                <% if (locals.userinfo.job) { %>
                  <strong><%= locals.userinfo.job %></strong>
                <% } else { %>
                  <em>Non renseignée</em>
                <% } %>
              </li>
              <li>Connexion établie le 
                <strong>
                  <time datetime="<%= locals.idtoken.iat %>"><%= new Date(locals.idtoken.iat * 1000).toLocaleString('fr-FR') %></time>
                </strong>
              </li>
              <li>Date d'expiration de la connexion le 
                <strong>
                  <time datetime="<%= locals.idtoken.exp %>"><%= new Date(locals.idtoken.exp * 1000).toLocaleString('fr-FR') %></time>
                </strong>
              </li>
              <li>Type de connexion :
                <% if (locals.idtoken.amr) { %>
                  <strong><%= locals.idtoken.amr.join(', ') %></strong>
                <% } else { %>
                  <em>Non renseignée</em>
                <% } %>
              </li>
              <li>Classe de contexte d’authentification : 
                <% if (locals.idtoken.acr) { %>
                  <strong><%= locals.idtoken.acr %></strong>
                <% } else { %>
                  <em>Non renseigné</em>
                <% } %>
              </li>
						</ul>
					</div>
				</div>
			</div>
			<div class="fr-col-12 fr-col-lg-6">
				<div id="authorization_request_card_user_44597" class="fr-basic-card">
